@using Vidly.Models
@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*

    This is a comments multiple lanes.
*@

@{

    var className = Model.Customers.Count > 1 ? "popular" : null;
}

@*Approach with model*@
<h2 class="@className">@Model.Movie.Name</h2>

@*Approach with ViewData*@
@*<h2>@(((Movie)ViewData["Movie"]).Name )</h2>*@

@*Approach with Viewbag*@
@*<h2>@(((Movie)ViewBag.Movie).Name )</h2>*@

@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie before.</text>
}
else
{
    <ul>

        @foreach (var customer in Model.Customers)
        {

            <li>@customer.Name</li>
        }
    </ul>
}

